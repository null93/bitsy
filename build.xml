<?xml version="1.0" encoding="UTF-8"?>
<project name="CloudClip" default="default" basedir="."> 
	<!-- Define the bundle app task given the path and class name to JAR file -->
	<taskdef name="bundleapp" classname="com.oracle.appbundler.AppBundlerTask" classpath="lib/appbundler-1.0.jar" />
	<!-- Define the class path for compilation and for runtime -->
	<path id="classpath">
		<fileset dir="lib">
			<include name="json-simple.jar" />
			<include name="iconloader.jar" />
		</fileset>
		<pathelement location="build/classes" />
	</path>
	<!-- This target will clean the project, but not delete the user data generated by app -->
	<target name="clean">
		<delete dir="build"/>
		<delete dir="dist"/>
		<delete>
    		<fileset dir="src" includes="**/*.class"/>
    		<fileset dir="." includes="**/*.DS_Store"/>
		</delete>
	</target>
	<!-- This target will clean the project and delete everything including user data -->
	<target name="nuke">
		<delete dir="build"/>
		<delete dir="dist"/>
		<delete>
    		<fileset dir="src" includes="**/*.class"/>
    		<fileset dir="." includes="**/*.DS_Store"/>
    		<fileset dir="." includes="clips.json"/>
    		<fileset dir="." includes="settings.json"/>
		</delete>
	</target>
	<!-- This target compiles the java files into class files -->
	<target name="build">
		<mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes" includeantruntime="false" >  
			<compilerarg value="-Xlint:unchecked"/> 
			<compilerarg value="-Xdiags:verbose"/> 
			<classpath refid="classpath" />
		</javac>
	</target>
	<!-- This target generates the jar file -->
	<target name="jar" depends="build">
		<mkdir dir="build/jar"/>
	    <copy todir="src/io/raffi/CloudClip">
	        <fileset dir="design">
	            <include name="**/*.png"/>
	        </fileset>
	    </copy>
		<jar destfile="build/jar/CloudClip.jar" basedir="build/classes" >
			<manifest>
				<attribute name="Main-Class" value="io.raffi.CloudClip.CloudClip"/>
			</manifest>
			<zipgroupfileset dir="lib" includes="json-simple.jar"/>
			<zipgroupfileset dir="lib" includes="iconloader.jar"/>
			<fileset dir="src">
            	<include name="**/*.png" />
        	</fileset>
		</jar>
		<delete>
    		<fileset dir="src" includes="**/*.png"/>
		</delete>
	</target>
	<!-- This target converts the jar into an app for Mac OS -->
	<target name="app" depends="jar">
		<mkdir dir="dist"/>
		<bundleapp
			outputdirectory="dist"
			name="CloudClip"
			displayname="CloudClip"
			identifier="CloudClip"
			icon="design/Icon.icns"
			mainclassname="io.raffi.CloudClip.CloudClip">
			<classpath file="build/jar/CloudClip.jar" />
		</bundleapp>
		<copy file="src/Info.plist" todir="dist/CloudClip.app/Contents" overwrite="true"/>
	</target>
	<!-- This target launches the jar file -->
	<target name="run" depends="jar">
		<java jar="build/jar/CloudClip.jar" fork="true" >
			<classpath refid="classpath" />
		</java>
	</target>
</project>